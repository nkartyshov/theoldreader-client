<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="ru.oldowl.viewmodel.MainViewModel" />

        <variable
            name="view"
            type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            android:id="@+id/navigation_header"
            layout="@layout/navigation_header" />

        <View style="@style/VerticalDivider" />

        <LinearLayout style="@style/NavItem"
            android:id="@+id/all_articles">

            <ImageView
                style="@style/NavImageItem"
                android:src="@drawable/ic_home" />

            <TextView
                style="@style/TextNormal"
                android:text="@string/nav_all" />
        </LinearLayout>

        <LinearLayout style="@style/NavItem"
            android:id="@+id/favorite_articles">

            <ImageView
                style="@style/NavImageItem"
                android:src="@drawable/ic_bookmark" />

            <TextView
                style="@style/TextNormal"
                android:text="@string/nav_favorite" />
        </LinearLayout>

        <LinearLayout
            style="@style/ContentFullWidth.Vertical"
            android:visibility="@{viewModel.hasItems ? view.VISIBLE : view.GONE}">

            <View style="@style/VerticalDivider" />

            <TextView
                style="@style/TextNormal"
                android:padding="@dimen/indent_default"
                android:text="@string/nav_subscriptions" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/subscription_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:subscriptionWithUnread="@{viewModel.subscriptions}"/>

        </LinearLayout>

        <LinearLayout style="@style/NavItem"
            android:id="@+id/add_subscription">

            <ImageView
                style="@style/NavImageItem"
                android:src="@drawable/ic_rss_feed" />

            <TextView
                style="@style/TextNormal"
                android:text="@string/nav_add_subscription" />
        </LinearLayout>

        <LinearLayout style="@style/NavItem"
            android:id="@+id/settings">

            <ImageView
                style="@style/NavImageItem"
                android:src="@drawable/ic_settings" />

            <TextView
                style="@style/TextNormal"
                android:text="@string/nav_settings" />
        </LinearLayout>
    </LinearLayout>
</layout>