<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="viewModel"
            type="ru.oldowl.viewmodel.MainViewModel" />

        <variable
            name="recyclerConfig"
            type="ru.oldowl.core.binding.RecyclerConfig" />

        <variable
            name="onAllPage"
            type="Runnable" />

        <variable
            name="onFavoritePage"
            type="Runnable" />

        <variable
            name="onAddSubscription"
            type="Runnable" />

        <variable
            name="onSettings"
            type="Runnable" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <LinearLayout
            style="@style/ContentFullParent"
            android:orientation="vertical">

            <include
                android:id="@+id/navigation_header"
                layout="@layout/navigation_header" />

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/NavItem"
                android:onClick="@{onAllPage}">

                <ImageView
                    style="@style/NavImageItem"
                    android:contentDescription="@string/nav_all"
                    android:src="@drawable/ic_home" />

                <TextView
                    style="@style/TextNormal"
                    android:text="@string/nav_all" />
            </LinearLayout>

            <LinearLayout
                style="@style/NavItem"
                android:onClick="@{onFavoritePage}">

                <ImageView
                    style="@style/NavImageItem"
                    android:contentDescription="@string/nav_favorite"
                    android:src="@drawable/ic_bookmark" />

                <TextView
                    style="@style/TextNormal"
                    android:text="@string/nav_favorite" />
            </LinearLayout>

            <LinearLayout
                style="@style/ContentFullWidth.Vertical"
                android:visibility="@{viewModel.hasItems ? view.VISIBLE : view.GONE}">

                <View style="@style/VerticalDivider" />

                <TextView
                    style="@style/NavSubHeader"
                    android:text="@string/nav_subscriptions" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/subscription_list"
                    config="@{recyclerConfig}"
                    style="@style/ContentFullWidth"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

            <View style="@style/VerticalDivider" />

            <LinearLayout
                style="@style/NavItem"
                android:onClick="@{onAddSubscription}">

                <ImageView
                    style="@style/NavImageItem"
                    android:contentDescription="@string/nav_add_subscription"
                    android:src="@drawable/ic_rss_feed" />

                <TextView
                    style="@style/TextNormal"
                    android:text="@string/nav_add_subscription" />
            </LinearLayout>

            <LinearLayout
                style="@style/NavItem"
                android:onClick="@{onSettings}">

                <ImageView
                    style="@style/NavImageItem"
                    android:contentDescription="@string/nav_settings"
                    android:src="@drawable/ic_settings" />

                <TextView
                    style="@style/TextNormal"
                    android:text="@string/nav_settings" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>